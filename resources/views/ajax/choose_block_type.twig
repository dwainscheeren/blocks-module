<div class="modal-header">
    <button class="close" data-dismiss="modal">
        <span>&times;</span>
    </button>
    <h4 class="modal-title">{{ trans('module::admin.choose_block') }}</h4>
</div>

<div class="modal-body">
    {% if not blocks.isEmpty() %}
        <ul class="nav nav-pills nav-stacked">
            {% for block in blocks %}
                <li class="nav-item">
                    <a href="{{ url_to('admin/blocks/create?type=' ~ block.namespace) }}" class="nav-link">
                        <strong>{{ trans(block.title) }}</strong>
                        <br>
                        <small>{{ trans(block.description) }}</small>
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        {{ trans('streams::message.no_results') }}
    {% endif %}
</div>
